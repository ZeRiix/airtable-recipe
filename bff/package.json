{
    "name": "bff",
    "type": "module",
    "scripts": {
        "dev:http": "tsx --watch interfaces/http/main.ts",
        "start:http": "tsx interfaces/http/main.ts",

        "generate:types": "DB_CONNECTION=false duplojs-types-codegen --import @duplojs/node/globals --include interfaces/http/routes/index.ts --output ../front/src/libs/client/types/duplojsTypesCodegen.d.ts",

        "test:lint": "eslint",
        "test:types": "tsc",

        "prisma:generate": "prisma generate",
        "prisma:make-migration": "prisma migrate dev",
        "prisma:apply-migration": "prisma migrate deploy",

        "postinstall": "npm run prisma:generate && npm run generate:types"
    },
    "dependencies": {
        "@duplojs/core": "1.0.3",
        "@duplojs/http-client": "1.2.2",
        "@duplojs/node": "1.0.1",
        "@duplojs/utils": "0.3.1",
        "@prisma/client": "^6.5.0",
        "airtable": "0.12.2",
        "cookie": "1.0.2",
        "dotenv": "16.4.5",
        "jsonwebtoken": "9.0.2",
        "dotenv-expand": "12.0.1"
    },
    "devDependencies": {
        "@duplojs/types-codegen": "1.0.1",
        "@types/cookie": "0.6.0",
        "@types/node": "22.13.10",
        "@types/jsonwebtoken": "9.0.9",
        "prisma": "6.5.0"
    },
    "prisma": {
        "schema": "interfaces/providers/prisma/schema.prisma"
    }
}
